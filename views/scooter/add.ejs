<body>
    <%- include("./header.ejs") %>
    <div class="container">
        <div class="row">
          <div class="col"></div>

          <div class="col-6">
            <h2><%- title %></h2>
            <form method="POST">
            <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Nume</span>
            <input type="text" name="name" class="form-control">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Nivelul bateriei</span>
                <input type="number" name="battery" class="form-control" min="0" max="100">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Pret / ora</span>
                <input type="number" name="price_per_hour" class="form-control" min="1" max="100">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Viteza</span>
                <input type="number" name="speed" class="form-control" min="1" max="120">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Greutate maxima admisa</span>
                <input type="number" name="max_weight" class="form-control" min="1" max="120">
            </div>

            <button type="submit" class="btn btn-primary btn-block">Adauga</button>
            </form>

          </div>
          <div class="col"></div>
        </div>
    </div>
    <%- include("./footer.ejs") %>
</body>